<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    android:id="@+id/ll_bg"
    android:padding="7dp">

    <LinearLayout
        android:id="@+id/ll_text"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_marginRight="18dp"
        android:layout_toStartOf="@+id/iv_icon"
        android:layout_toLeftOf="@+id/iv_icon">

        <TextView
            android:id="@+id/tv_creatorName"
            style="@style/tv_small"
            android:textColor="@color/gray"
            android:textSize="@dimen/dp_14"
            tools:text="张三" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_title"
            style="@style/tv_small"
            android:maxLines="1"
            android:layout_width="match_parent"
            tools:text="怎么么么么么么么么么么么么么么么么么么么么么么么" />



    <TextView
        android:id="@+id/tv_address"
        style="@style/tv_small"
        android:layout_marginTop="7dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/dp_14"
        tools:text="重庆市半区去啊啊" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price"
            style="@style/tv_small"
            android:layout_marginTop="3dp"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_14"
            tools:text="补贴30元" />

        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_time_joinCount"
            style="@style/tv_small"
            android:layout_marginTop="3dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/dp_14"
            tools:text="/03.19 / 50人参与" />

    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_icon"
        tools:src="@drawable/selector_agency"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_alignTop="@id/ll_text"
        android:layout_alignBottom="@id/ll_text"
        android:layout_width="87dp"
        android:layout_height="85dp"
         />
</RelativeLayout>