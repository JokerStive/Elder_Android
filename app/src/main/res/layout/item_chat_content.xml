<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_other_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        >

        <ImageView
            android:id="@+id/iv_other_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar"
            />

        <TextView
            android:id="@+id/tv_other_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_other_avatar"
            style="@style/tv_small"
            android:background="@drawable/chat_other_bg"
            tools:text="哈哈哈哈专用羽绒服洗涤剂哈哈哈哈哈哈哈哈专用羽绒服洗涤剂哈哈哈哈哈哈哈哈专用羽绒服洗涤剂哈哈哈哈" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        >

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_my_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar"
            />


        <TextView
            android:id="@+id/tv_my_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_my_avatar"
            style="@style/tv_small"
            android:background="@drawable/chat_my_bg"
            tools:text="哈哈哈哈哈哈哈哈哈哈哈哈专用羽绒服洗涤剂哈哈哈哈哈哈哈哈哈哈专用羽绒服洗涤剂哈哈哈哈哈哈哈哈哈哈哈哈专用羽绒服洗涤剂哈哈哈哈哈哈哈哈哈哈哈哈哈哈专用羽绒服洗涤剂" />
    </RelativeLayout>
</LinearLayout>