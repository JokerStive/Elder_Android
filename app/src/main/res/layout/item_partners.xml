<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_rect_white_to_dark"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_4"
    android:paddingTop="@dimen/dp_4">

    <TextView
        android:id="@+id/tv_partners_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="1" />

    <lilun.com.pension.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/tv_partners_index"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_avatar"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_name"
            style="@style/acitivyt_detail_normal_black"
            tools:text="尼玛" />


        <TextView
            android:id="@+id/tv_desp"
            style="@style/acitivyt_detail_normal_grey"
            android:layout_width="match_parent"
            android:textSize="14sp"
            tools:text="公益称号：达人" />
    </LinearLayout>

</RelativeLayout>