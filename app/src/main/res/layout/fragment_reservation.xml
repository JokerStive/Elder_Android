<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <lilun.com.pensionlife.widget.NormalTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="立即预约" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                style="@style/line_gray"
                android:layout_height="10dp"
                android:background="#f5f5f9" />

            <RelativeLayout
                android:id="@+id/rl_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/sp_15">

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:src="@drawable/icon_def" />

                <TextView
                    android:id="@+id/tv_product_title"
                    style="@style/tv_normal"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_toRightOf="@id/iv_product_image"
                    android:maxLines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="为您提供以房养老业务" />

                <TextView
                    android:id="@+id/tv_product_area"
                    style="@style/tv_normal"
                    android:layout_below="@id/tv_product_title"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@id/iv_product_image"
                    android:maxLines="2"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14"
                    tools:text="服务范围:重庆路小区" />


                <TextView
                    android:id="@+id/tv_product_price"
                    style="@style/tv_normal"

                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_product_title"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@id/iv_product_image"
                    android:gravity="right"
                    android:maxLines="2"
                    android:textColor="#fe620f"
                    android:textSize="@dimen/sp_12"
                    tools:text="￥998.00" />

            </RelativeLayout>

            <View
                style="@style/line_gray"
                android:layout_height="10dp"
                android:background="#f5f5f9" />

            <TextView
                style="@style/tv_normal"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_16"
                android:text="预约服务信息"
                android:textColor="#999999"
                android:textSize="@dimen/sp_15" />

            <View
                style="@style/line_gray"
                android:layout_height="1dp"
                android:background="#f5f5f9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    style="@style/tv_normal"
                    android:layout_margin="@dimen/dp_16"
                    android:text="姓名"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/tv_contact_name"
                    style="@style/tv_normal"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/dp_16"
                    android:padding="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    tools:text="测试员乐乐" />

                <View
                    style="@style/line_gray"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_contact_name"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="#f5f5f9" />

                <TextView
                    style="@style/tv_normal"
                    android:text="联系方式"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rect_red"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>