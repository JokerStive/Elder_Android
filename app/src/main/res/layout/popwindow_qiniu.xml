<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_write_corner"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="@dimen/dp_20"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qiniu_top" />

        <TextView
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            style="@style/tv_normal"
            android:layout_marginTop="@dimen/dp_20"
            android:text="图片提交失败，请选择是否重新提交！"
            android:textColor="#333333"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            style="@style/tv_normal"
            android:layout_marginTop="@dimen/dp_15"
            android:text="● 直接发布--图片不会发布成功"
            android:textColor="#828181"
            android:textSize="@dimen/dp_8" />

        <TextView
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            style="@style/tv_normal"
            android:layout_marginTop="@dimen/dp_8"
            android:text="● 重新提交--等待图片上传成功"
            android:textColor="#828181"
            android:textSize="@dimen/dp_8" />


        <View
            style="@style/line_gray"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/dp_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:id="@+id/tv_direct_push"
            style="@style/tv_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="直接发布"
            android:textColor="#333333"
            android:textSize="@dimen/dp_10" />

        <View
            style="@style/line_gray"
            android:layout_width="0.1dp"
            android:layout_height="match_parent" />

        <TextView
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:id="@+id/tv_continue_upload"
            style="@style/tv_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="重新提交"
            android:textColor="#108ee9"
            android:textSize="@dimen/dp_10" />

    </LinearLayout>

</LinearLayout>