<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_ask_icon"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:background="@drawable/selector_help" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/back_with_circle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ask_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_reservation"
                style="@style/tv_small"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/iv_aid_icon"
                android:layout_marginRight="20dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/shape_circle_white"
                android:gravity="center"
                android:text="@string/reservation" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/tv_normal"
                android:layout_below="@id/tv_reservation"
                android:layout_marginTop="17dp"
                tools:text="度假服务" />

            <TextView
                android:id="@+id/tv_provider"
                style="@style/tv_small"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="15dp"
                tools:text="提供商：金色养老院" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/tv_small"
                android:layout_below="@id/tv_provider"
                android:layout_marginTop="3dp"
                tools:text="价格:2000" />

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_price"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <View style="@style/line_gray" />

                <TextView
                    android:id="@+id/tv_introduction"
                    style="@style/tv_normal"
                    android:layout_marginTop="15dp"
                    android:text="@string/introduction" />

                <TextView
                    android:id="@id/tv_content"
                    style="@style/tv_small"
                    android:layout_marginTop="15dp"
                    tools:text="这是一个很好的服务啊" />


                <View
                    style="@style/line_gray"
                    android:layout_marginTop="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@id/tv_content"
                        style="@style/tv_normal"
                        android:textColor="@color/red"
                        tools:text="评价23条" />


                    <RatingBar
                        android:id="@+id/rb_bar"
                        style="@style/fiveRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:isIndicator="true"
                        android:numStars="5" />
                </LinearLayout>

                <View style="@style/line_gray" />

            </LinearLayout>


            <RelativeLayout
                android:layout_below="@id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/tv_provider_name"
                    tools:text="金色养老院"
                    android:layout_centerVertical="true"
                    style="@style/tv_small" />

                <TextView
                    android:textColor="@color/white"
                    android:padding="18dp"
                    android:background="@drawable/shape_rect_red"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/enter_provider"
                    style="@style/tv_small" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>