<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_8">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_8"
        tools:src="@drawable/selector_agency" />

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_toRightOf="@+id/iv_icon"
        android:orientation="vertical"
        android:padding="@dimen/dp_4">


        <TextView
            android:id="@+id/tv_item_title"
            style="@style/tv_small_ellipsize"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:maxLines="1"
            tools:text="怎么么么么么么么么么么么么么么么么么么么么么么么" />


        <RatingBar
            android:id="@+id/rb_bar"
            style="@style/ratingBarr_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:isIndicator="true"
            android:numStars="5" />

        <TextView
            android:id="@+id/tv_item_address"
            style="@style/tv_small_ellipsize"
            android:layout_below="@+id/tv_help_priority"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="茶园新城茶园新城茶园新城茶" />
    </LinearLayout>

</RelativeLayout>