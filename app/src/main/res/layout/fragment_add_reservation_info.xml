<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <lilun.com.pensionlife.widget.NormalTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="用户信息" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_confirm"
        android:layout_below="@id/titleBar"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:orientation="vertical">

            <TextView
                style="@style/tv_small_ellipsize"

                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableLeft="@drawable/pension_agency_icon"
                android:drawablePadding="@dimen/dp_8"
                android:text="预约者信息" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_bg"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        style="@style/tv_small_ellipsize"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_16"
                        android:text="@string/name" />

                    <EditText
                        android:id="@+id/et_occupant_name"
                        style="@style/et_normal"
                        android:layout_width="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:hint="请输入入住者姓名"
                        android:textSize="@dimen/sp_16"
                        android:padding="@dimen/dp_10" />

                    <View
                        style="@style/line_gray"
                        android:layout_below="@id/et_occupant_name" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        style="@style/tv_small_ellipsize"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_16"
                        android:text="电话" />

                    <EditText
                        android:id="@+id/et_reservation_phone"
                        style="@style/et_normal"
                        android:layout_width="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:textSize="@dimen/sp_16"
                        android:hint="请输入电话号码"
                        android:inputType="phone"
                        android:padding="@dimen/dp_10" />

                    <View
                        style="@style/line_gray"
                        android:layout_below="@id/et_reservation_phone" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        style="@style/tv_small_ellipsize"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_16"
                        android:text="地址" />

                    <TextView
                        android:id="@+id/et_contact_address"
                        style="@style/tv_normal"
                        android:layout_width="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="100dp"
                        android:gravity="right"
                        android:maxLines="3"
                        android:textSize="@dimen/sp_16"
                        android:padding="@dimen/dp_10"
                        android:text="你大姐覅大方死啊放假is啊放假死啊放假死哦啊飞机送啊飞机萨芬囧撒娇覅送哀家覅就覅哦撒娇覅哦撒娇覅哦啊" />

                    <View
                        style="@style/line_gray"
                        android:layout_below="@id/et_contact_address" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_contact_extent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            style="@style/tv_small_ellipsize"
                            android:layout_centerVertical="true"
                            android:text="@string/sex" />

                        <TextView
                            android:id="@+id/tv_sex"
                            style="@style/tv_small_ellipsize"
                            android:layout_width="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:hint="点击选择性别"
                            android:textSize="@dimen/sp_16"
                            android:padding="@dimen/dp_10" />

                        <View
                            style="@style/line_gray"
                            android:layout_below="@id/tv_sex" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            style="@style/tv_small_ellipsize"
                            android:layout_centerVertical="true"
                            android:text="@string/birthday" />

                        <TextView
                            android:id="@+id/tv_birthday"
                            style="@style/tv_small_ellipsize"
                            android:layout_width="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:textSize="@dimen/sp_16"
                            android:hint="点击选择出生日期"
                            android:padding="@dimen/dp_10" />

                        <View
                            style="@style/line_gray"
                            android:layout_below="@id/tv_birthday" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            style="@style/tv_small_ellipsize"
                            android:layout_centerVertical="true"
                            android:text="@string/health_status" />

                        <TextView
                            android:id="@+id/tv_health_status"
                            style="@style/tv_small_ellipsize"
                            android:layout_width="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:textSize="@dimen/sp_16"
                            android:hint="点击选择健康状况"
                            android:padding="@dimen/dp_10" />

                        <View
                            style="@style/line_gray"
                            android:layout_below="@id/tv_health_status" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            style="@style/tv_small_ellipsize"
                            android:layout_centerVertical="true"
                            android:text="@string/relation" />

                        <TextView
                            android:id="@+id/tv_relation"
                            style="@style/tv_small_ellipsize"
                            android:layout_width="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:hint="选择关系"
                            android:textSize="@dimen/sp_16"
                            android:padding="@dimen/dp_10" />

                        <View
                            style="@style/line_gray"
                            android:layout_below="@id/tv_relation" />
                    </RelativeLayout>


                    <TextView
                        style="@style/tv_small"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="个人健康信息填写" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_90"
                        android:background="@drawable/home_bg">

                        <EditText
                            android:id="@+id/et_health_desc"
                            style="@style/et_normal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_4"
                            android:gravity="top"
                            android:textSize="@dimen/sp_16"
                            android:hint="请填写详细的个人健康状况"

                            />
                    </RelativeLayout>
                </LinearLayout>


                <TextView
                    style="@style/tv_small_ellipsize"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_16"
                    android:drawableLeft="@drawable/pension_agency_icon"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="备注"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_memo"
                    style="@style/et_normal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_margin="@dimen/dp_4"
                    android:background="@drawable/shape_rect_white"
                    android:gravity="top"
                    android:hint="请填写详细的个人状况"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone"

                    />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rect_red"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone" />

</RelativeLayout>