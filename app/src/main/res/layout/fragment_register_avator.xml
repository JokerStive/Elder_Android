<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/register_avator_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:gravity="center"
        android:text="@string/update_avator"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_avator_icon"
            android:gravity="center">

            <lilun.com.pensionlife.widget.CircleImageView
                android:id="@+id/civ_account_avatar"
                android:layout_width="396px"
                android:layout_height="396px"
                android:background="@drawable/selector_click_trans_to_dark_corners_5"
                app:border_color="@color/transparent"
                app:border_width="0dp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_click_trans_to_dark_corners_5"
            android:src="@drawable/commit" />
    </LinearLayout>
</LinearLayout>