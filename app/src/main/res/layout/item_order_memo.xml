<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="@dimen/dp_8">

    <RelativeLayout
        android:id="@+id/rl_call_situation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2">

        <TextView

            style="@style/tv_small"
            android:text="@string/order_call_situation" />

        <TextView
            android:id="@+id/tv_call_situation"
            style="@style/tv_small"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@drawable/next"
            android:hint="点击选择" />
    </RelativeLayout>

    <View
        style="@style/line_gray"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10" />

    <TextView
        style="@style/tv_small"
        android:text="@string/write_call_situation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_reply">

        <EditText
            android:id="@+id/et_memo"
            style="@style/et_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:gravity="top"
            android:hint="请填写详细备注"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>


    <RadioGroup
        android:id="@+id/rg_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="right"
        android:orientation="horizontal">

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_assigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_memo"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/status_shouli"
            android:textColor="@color/selector_filter_bar_text"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:background="@drawable/selector_memo"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/status_delay"
            android:textColor="@color/selector_filter_bar_text"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:background="@drawable/selector_memo"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:text="完成"
            android:textColor="@color/selector_filter_bar_text"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:background="@drawable/selector_memo"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/cancel"
            android:textColor="@color/selector_filter_bar_text"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:checked="true"
            android:visibility="gone"
            android:id="@+id/rb_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:background="@drawable/selector_memo"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/cancel"
            android:textColor="@color/selector_filter_bar_text"
            android:textSize="@dimen/sp_14" />

    </RadioGroup>

</LinearLayout>