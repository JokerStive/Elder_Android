<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="@color/bg_grey_chat"
        android:minHeight="@dimen/dp_50"
        android:padding="@dimen/dp_4">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/acet_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_write_strock_corner_5"
            android:hint="@string/say_something_hint"
            android:maxLines="4"
            android:minHeight="@dimen/dp_40"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/acbt_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/shape_rect_white_strock_corner_5"
                android:text="@string/send"
                android:textColor="@color/font_grey_chat"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>