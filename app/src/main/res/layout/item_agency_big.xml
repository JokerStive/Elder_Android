<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bg"
    android:padding="14dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/icon_def" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_title"
            style="@style/tv_normal"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="300dp"
            android:scrollHorizontally="true"
            tools:text="下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了" />


    </LinearLayout>


    <RatingBar
        android:id="@+id/rb_bar"
        style="@style/ratingBarr_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:isIndicator="true"
        android:numStars="5" />

    <TextView
        android:id="@+id/tv_item_address"
        style="@style/tv_small"
        android:layout_below="@+id/tv_help_priority"
        android:layout_marginTop="3dp"
        tools:text="茶园新城茶园新城茶园新城茶" />

</LinearLayout>