<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bg"
    android:padding="@dimen/dp_14"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/icon_def">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product_title"
            style="@style/tv_normal_ellipsize"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/dp_300"
            android:scrollHorizontally="true"
            tools:text="下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了" />


    </LinearLayout>


    <RatingBar
        android:id="@+id/rb_score"
        style="@style/ratingBarr_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:isIndicator="true"
        android:numStars="5" />

    <TextView
        android:id="@+id/tv_item_address"
        style="@style/tv_small_ellipsize"
        android:layout_below="@+id/tv_help_priority"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="茶园新城茶园新城茶园新城茶" />

</LinearLayout>