<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <lilun.com.pensionlife.widget.NormalTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            app:rightIcon="@drawable/detail"
            app:title="东大门活动丢失的情况ll"
            app:titleMaxEms="8" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10" />


        <lilun.com.pensionlife.widget.InputSendView
            android:id="@+id/isv_input_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_smooth_last_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shape_unread"
        android:drawableLeft="@drawable/icon_unread"
        android:padding="@dimen/dp_4"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@drawable/icon_un_read_arraw"
        android:gravity="center"
        android:text="@string/num_unread"
        android:textColor="@color/unread" />
</RelativeLayout>