<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_module_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_normal"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_title"
            style="@style/tv_normal"
            android:maxLength="15"
            android:maxLines="1"
            tools:text="下水道堵了下水道堵了下水道堵了" />

        <RatingBar
            android:isIndicator="false"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_bar"
            android:numStars="5"
            android:layout_gravity="center_vertical"
            style="@style/fiveRatingBar" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_price"
        style="@style/tv_normal"

        android:layout_below="@+id/tv_help_priority"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        tools:text="500元" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_content"
        style="@style/tv_normal"
        android:lineSpacingMultiplier="1.2"
        android:layout_below="@+id/tv_help_priority"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"

        tools:text="茶园新城茶园新城茶园新城茶茶园新城茶园新城茶园新城茶茶园新城茶园新城茶园新城茶茶园新城茶园新城茶园新城茶茶园新城茶园新城茶园新城茶茶园新城茶园新城茶园新城茶" />
    <View
        android:layout_marginTop="17dp"
        style="@style/line_gray"/>

</LinearLayout>