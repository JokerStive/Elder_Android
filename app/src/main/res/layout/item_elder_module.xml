<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:background="@drawable/selector_activity"
    android:id="@+id/ll_module_background">

    <ImageView
        android:id="@+id/iv_module_icon"
        android:layout_width="@dimen/module_icon_height"
        android:layout_height="@dimen/module_icon_height"
        tools:src="@drawable/announcement_def"
        android:scaleType="centerInside"
        />
    <TextView
        android:id="@+id/tv_module_name"
        style="@style/tv_normal_ellipsize"
        android:layout_marginTop="@dimen/dp_8"
        tools:text="我是描述"
        android:textColor="@color/white"
        />

</LinearLayout>