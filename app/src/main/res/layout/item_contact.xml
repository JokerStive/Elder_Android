<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_contact_name"
            style="@style/tv_small_ellipsize"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="#000000"
            tools:text="阿甘"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_contact_mobile"
            android:layout_toStartOf="@+id/tv_contact_mobile" />

        <TextView
            android:id="@+id/tv_contact_mobile"
            style="@style/tv_small"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="right"
            tools:text="18723445670" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_contact_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:maxLines="3"
        android:textColor="#989898"
        android:textSize="15sp"
        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈" />

    <View
        style="@style/line_gray"
        android:background="#eaeaea"
        android:layout_marginTop="@dimen/dp_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_contact_default"
            style="@style/tv_small_ellipsize"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dp_14"
            android:paddingRight="@dimen/dp_50"

            android:paddingBottom="@dimen/dp_16"
            android:textColor="#666666"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/selector_set_def"
            android:drawablePadding="@dimen/dp_4"
            android:text="设为默认" />

        <TextView

            android:id="@+id/tv_contact_edit"
            style="@style/tv_small_ellipsize"
            android:layout_alignTop="@+id/tv_contact_delete"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dp_14"
            android:layout_toLeftOf="@+id/tv_contact_delete"
            android:layout_toStartOf="@+id/tv_contact_delete"
            android:drawableLeft="@drawable/info_edit"
            android:paddingLeft="@dimen/dp_30"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_16"
            android:textColor="#666666"
            android:textSize="@dimen/sp_15"
            android:drawablePadding="@dimen/dp_8"
            android:text="编辑" />

        <TextView
            android:id="@+id/tv_contact_delete"
            android:paddingTop="@dimen/dp_14"
            style="@style/tv_small_ellipsize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_8"
            android:drawableLeft="@drawable/info_delete"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_8"
            android:textColor="#666666"
            android:paddingBottom="@dimen/dp_16"
            android:textSize="@dimen/sp_15"
            android:text="删除" />

    </RelativeLayout>
</LinearLayout>