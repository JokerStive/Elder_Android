<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/back" />

        </RelativeLayout>


        <lilun.com.pensionlife.widget.CustomTextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="@dimen/dp_5"
            android:enabled="true"
            android:hint="请输入您要搜索的关键字"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_50"
            android:paddingTop="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            app:textNormalSolidColor="#efefef"
            app:textNormalTextColor="#666666"
            android:textColor="#666666"
            app:textRadius="10dp" />


        <ImageView
            android:id="@+id/iv_change_layout"
            style="@style/tv_normal_ellipsize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:focusable="false"
            android:padding="@dimen/dp_10"
            android:src="@drawable/layout_type_big" />
    </RelativeLayout>


</LinearLayout>