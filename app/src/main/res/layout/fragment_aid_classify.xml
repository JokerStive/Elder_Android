<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <lilun.com.pension.widget.PositionTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fl_announcement_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_bar_height"
        android:background="@drawable/announcement_def" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_need_help"
                style="@style/tv_normal_ellipsize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_help"
                android:clickable="true"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/need_help"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/need_help"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_find_help"
                style="@style/tv_normal_ellipsize"
                android:layout_width="0dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_help"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/find_help"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="疑问帮忙"
                android:textColor="@color/white" />


        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

</LinearLayout>