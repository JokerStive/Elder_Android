            android:layout_below="@id/tv_protocol_title"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:textColor="#bbbbbb"
            android:textSize="@dimen/sp_12"
            tools:text="2018-1-16" />

    </RelativeLayout>

