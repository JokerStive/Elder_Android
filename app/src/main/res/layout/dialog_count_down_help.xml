<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_desc"
        style="@style/tv_line_space"
        android:paddingStart="39dp"
        android:paddingEnd="39dp"
        android:layout_marginTop="23dp"
        android:text="@string/count_down_help_desc" />

    <lilun.com.pension.widget.AlarmView
        android:layout_gravity="center"
        android:id="@+id/alarm"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="41dp" />


    <Button
        android:id="@+id/btn_cancel_help"
        style="@style/btn_red_deep"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="26dp"
        android:text="@string/cancel" />

</LinearLayout>