<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_module_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_normal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/help_detail_icon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sophisticated"
            style="@style/tv_normal_ellipsize"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/title_max_width"
            tools:text="下水道堵了下水道堵了下水道堵了" />

        <TextView
            android:id="@+id/tv_product_price"
            style="@style/tv_normal_ellipsize"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            tools:text="免费" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="horizontal">


        <RatingBar
            android:id="@+id/rb_score"
            style="@style/ratingBarr_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:isIndicator="true"
            android:numStars="5" />

        <TextView
            android:id="@+id/tv_rank_count"
            style="@style/tv_normal_ellipsize"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            tools:text="105条评论" />
    </LinearLayout>


</LinearLayout>