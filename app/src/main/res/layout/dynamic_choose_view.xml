<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <TextView
        android:id="@+id/mate_title"
        style="@style/tv_normal_ellipsize"
        android:layout_width="wrap_content"
        android:padding="@dimen/dp_16"
        tools:text="入住姓名        "
        android:textColor="#333333"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/mate_value"
        style="@style/et_normal"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_16"
        android:layout_toRightOf="@id/mate_title"
        android:drawableRight="@drawable/add_contact_next"
        tools:hint="姓名"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17" />


    <View
        style="@style/line_gray"
        android:layout_height="1dp"
        android:layout_below="@id/mate_title"
        android:background="#f5f5f9" />


</RelativeLayout>