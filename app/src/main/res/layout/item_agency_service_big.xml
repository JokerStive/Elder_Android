<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingTop="@dimen/dp_12">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/icon_def">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:scaleType="fitXY" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_product_title"
            style="@style/tv_normal_ellipsize"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            tools:text="下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了" />

        <TextView
            android:id="@+id/tv_product_title_extra"
            style="@style/tv_normal_ellipsize"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:maxLines="1"
            android:textColor="#a9a9a9"
            android:textSize="@dimen/sp_14"
            tools:text="下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <lilun.com.pensionlife.widget.CustomRatingBar
                android:id="@+id/rb_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:dividerWidth="3dp"
                app:starCount="5"
                app:countSelected="0"
                app:widthAndHeight="@dimen/dp_13" />

            <TextView
                android:id="@+id/tv_score"
                style="@style/tv_normal_ellipsize"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:maxLines="1"
                android:textColor="#FF9D09"
                android:textSize="@dimen/sp_12"
                tools:text="4.6" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_small_ellipsize"
                android:text="¥"
                android:textColor="#41b9d4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_product_price"
                style="@style/tv_small_ellipsize"
                android:layout_marginLeft="@dimen/dp_2"
                android:textColor="#41b9d4"
                android:textSize="@dimen/sp_18"
                tools:text="998.00" />
        </LinearLayout>

    </LinearLayout>

    <View

        style="@style/line_gray"
        android:background="#c6c8c9" />


</LinearLayout>