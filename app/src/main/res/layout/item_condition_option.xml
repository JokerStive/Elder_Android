<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/tv_option"
        style="@style/tv_small_ellipsize"
        android:layout_width="wrap_content"
        android:padding="@dimen/dp_10"
        tools:text="哈哈哈" />

    <TextView
        android:id="@+id/tv_gou"
        style="@style/tv_small_ellipsize"
        android:layout_width="wrap_content"
        android:padding="@dimen/dp_10"
        android:textColor="@color/filter_checked_color"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:visibility="invisible"
        android:text="✔" />

    <View
        android:layout_below="@id/tv_option"
        style="@style/line_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_066"
        />


    <View
        android:layout_below="@id/tv_option"
        style="@style/line_gray"
        android:layout_width="@dimen/dp_066"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_option"
        android:layout_alignBottom="@+id/tv_option"
        />

</RelativeLayout>