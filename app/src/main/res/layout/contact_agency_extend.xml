<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16">


        <TextView
            android:id="@+id/extension_relation"
            style="@style/tv_normal_ellipsize"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="与入住的关系"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_contact_extension_relation"
            style="@style/tv_normal"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/extension_relation"
            android:drawableRight="@drawable/add_contact_next"
            android:hint="关系"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />


        <View
            style="@style/line_gray"
            android:layout_height="1dp"
            android:layout_below="@id/extension_relation"
            android:background="#f5f5f9" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16">


        <TextView
            android:id="@+id/extension_name"
            style="@style/tv_normal_ellipsize"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="入住姓名        "
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <EditText
            android:id="@+id/et_contact_extension_name"
            style="@style/et_normal"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/extension_name"
            android:hint="姓名"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />


        <View
            style="@style/line_gray"
            android:layout_height="1dp"
            android:layout_below="@id/extension_name"
            android:background="#f5f5f9" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16">


        <TextView
            android:id="@+id/extension_sex"
            style="@style/tv_normal_ellipsize"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="性别                "

            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_contact_extension_sex"
            style="@style/tv_normal"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/extension_sex"
            android:drawableRight="@drawable/add_contact_next"
            android:hint="选择性别"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />


        <View
            style="@style/line_gray"
            android:layout_height="1dp"
            android:layout_below="@id/extension_sex"
            android:background="#f5f5f9" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16">


        <TextView
            android:id="@+id/extension_birthday"
            style="@style/tv_normal_ellipsize"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="出生日期        "
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_contact_extension_birthday"
            style="@style/tv_normal"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/extension_birthday"
            android:drawableRight="@drawable/add_contact_next"
            android:hint="选择出生日期"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />


        <View
            style="@style/line_gray"
            android:layout_height="1dp"
            android:layout_below="@id/extension_birthday"
            android:background="#f5f5f9" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16">


        <TextView
            android:id="@+id/extension_health_status"
            style="@style/tv_normal_ellipsize"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="健康状况        "
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_contact_extension_health_status"
            style="@style/tv_normal"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/extension_health_status"
            android:drawableRight="@drawable/add_contact_next"
            android:hint="选择健康状况"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />


        <View
            style="@style/line_gray"
            android:layout_height="1dp"
            android:layout_below="@id/extension_health_status"
            android:background="#f5f5f9" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16">


        <TextView
            android:id="@+id/extension_health_desc"
            style="@style/tv_normal_ellipsize"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="个人健康信息"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <EditText
            android:id="@+id/tv_contact_extension_health_desc"
            style="@style/et_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/extension_health_desc"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/extension_health_desc"
            android:hint="请填写个人健康状况"
            android:maxLength="60"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17"
            tools:text="请填写个人健康状况请填写个人健康状况请填写个人健康状况请填写个人健康状况请填写个人健康状况请填写个人健康状况请填写个人健康状况写个人健康状况请填写个人健康状况请填写个人健康状况请填写个人健康状况请填写个人健康状况请填写个人健康状况请填写个人健康状况" />

        <TextView
            android:id="@+id/tv_health_desc_count"
            style="@style/tv_normal"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_contact_extension_health_desc"
            android:layout_marginRight="@dimen/dp_16"
            android:text="0/60"
            android:textColor="#cccccc"
            android:textSize="@dimen/sp_16" />


    </RelativeLayout>

</LinearLayout>