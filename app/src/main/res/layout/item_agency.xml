<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_normal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/help_detail_icon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_title"
            style="@style/tv_normal"
            android:maxWidth="@dimen/title_max_width"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            tools:text="下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了下水道堵了" />

        <RatingBar
            android:id="@+id/rb_bar"
            style="@style/fiveRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:isIndicator="true"
            android:numStars="5" />

        <TextView
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:id="@+id/tv_rank_count"
            style="@style/tv_small"
            android:layout_marginLeft="7dp"
            tools:text="105条评论" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_address"
        style="@style/tv_small"
        android:layout_below="@+id/tv_help_priority"
        android:layout_marginTop="1dp"
        tools:text="茶园新城茶园新城茶园新城茶" />

</LinearLayout>