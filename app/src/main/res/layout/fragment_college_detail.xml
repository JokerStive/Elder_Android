<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <lilun.com.pensionlife.widget.NormalTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/line"
        style="@style/line_gray"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/titleBar"
        android:background="#f5f5f9" />



    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_college_address"
            style="@style/tv_normal"
            android:textColor="#666666"
            android:textSize="@dimen/sp_15"
            tools:text="学校地址：重庆渝中 黄花园巴蜀路２－１" />


        <TextView
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/call"
            android:id="@+id/tv_college_mobile"
            style="@style/tv_normal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#666666"
            android:textSize="@dimen/sp_15"
            tools:text="学校地址：重庆渝中 黄花园巴蜀路２－１" />

        <TextView
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/call"
            android:id="@+id/tv_college_phone"
            style="@style/tv_normal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#666666"
            android:textSize="@dimen/sp_15"
            tools:text="学校地址：重庆渝中 黄花园巴蜀路２－１" />


    </LinearLayout>



    <WebView
        android:id="@+id/wb_college_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/line"
        android:layout_marginTop="@dimen/dp_10" />
</RelativeLayout>