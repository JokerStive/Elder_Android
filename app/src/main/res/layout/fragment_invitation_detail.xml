<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <lilun.com.pensionlife.widget.NormalTitleBar
        android:id="@+id/titleBar"
        app:title="消息详情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_below="@id/titleBar"
        style="@style/line_gray"/>

    <TextView
        android:layout_below="@id/titleBar"
        android:id="@+id/tv_invitation_title"
        tools:text="尊敬的用户，您的平台账号被*****邀请加 入，请确认。"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_17"
        style="@style/tv_normal" />

    <TextView
        android:id="@+id/tv_invitation_time"
        android:layout_below="@id/tv_invitation_title"
        tools:text="2017-12-05 15:47:27。"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_12"
        style="@style/tv_normal" />

    <TextView
        android:layout_toRightOf="@id/tv_invitation_time"
        android:id="@+id/tv_invitation_status"
        android:layout_below="@id/tv_invitation_title"
        tools:text="处理状态：已拒绝。"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_12"
        android:textColor="#108ee9"
        style="@style/tv_normal" />

    <RelativeLayout
        android:id="@+id/rl_operate"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:id="@+id/tv_invitation_refuse"
            android:text="拒绝"
            android:textSize="@dimen/sp_15"
            style="@style/tv_normal" />

        <TextView
            android:textColor="#108ee9"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:id="@+id/tv_invitation_join"
            android:text="加入"
            android:textSize="@dimen/sp_15"
            style="@style/tv_normal" />

    </RelativeLayout>
</RelativeLayout>