<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <TextView
        android:id="@+id/tv_desc"
        style="@style/tv_line_space"
        android:paddingStart="39dp"
        android:paddingEnd="39dp"
        android:layout_marginTop="23dp"
        android:text="@string/first_help_phone_desc"
         />

    <TextView
        android:id="@+id/tv_family"
        style="@style/tv_normal"
        android:layout_marginTop="57dp"
        android:paddingStart="39dp"
        android:text="@string/phone_number"
        />

        <EditText
            android:id="@+id/et_phone"
            android:inputType="phone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/tv_size_large"
            android:paddingStart="39dp"
            tools:text="112122222"
            />

        <View
            android:layout_marginStart="39dp"
            android:layout_marginEnd="39dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>


    <Button
        android:id="@+id/btn_confirm_phone"
        android:text="@string/confirm"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="226dp"
        android:layout_marginBottom="26dp"
        style="@style/btn_red_deep"
        />

</LinearLayout>