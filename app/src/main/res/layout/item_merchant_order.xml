<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:id="@+id/tv_sophisticated"
            style="@style/tv_small_ellipsize"
            tools:text="张三 ( 男 )"
            android:layout_toLeftOf="@+id/tv_health_status"
            android:layout_toStartOf="@+id/tv_health_status" />

        <TextView
            android:textColor="@color/red"
            android:id="@+id/tv_health_status"
            style="@style/tv_small_ellipsize"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            tools:text="半自理" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_creator"
        style="@style/tv_small_ellipsize"
        android:layout_marginTop="@dimen/dp_8"
        tools:text="3.18" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈" />

    <View
        style="@style/line_gray"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_call"
            style="@style/tv_small_ellipsize"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:background="@drawable/rect_coner_black"
            android:text="一键拨号" />

        <TextView
            android:textColor="@color/red"
            android:id="@+id/tv_memo"
            style="@style/tv_small_ellipsize"
            android:layout_marginLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/rect_coner_black"
            android:text="备注" />

    </LinearLayout>
</LinearLayout>