<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="151dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_def" />

        <TextView
            android:id="@+id/tv_price"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:drawablePadding="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_rect_black"
            android:layout_marginTop="15dp"
            style="@style/tv_small"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/rmb"
            android:drawableRight="@drawable/start"
            android:layout_marginLeft="10dp"
            tools:text="2095" />

        <TextView
            android:id="@+id/tv_tag_duration"
            android:paddingLeft="10dp"
            android:textSize="@dimen/sp_14"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:drawablePadding="3dp"
            android:background="@drawable/shape_rect_black"
            android:layout_marginTop="15dp"
            style="@style/tv_small"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="国内游·6天5晚" />

        <TextView
            android:id="@+id/tv_departure_satisfaction"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:drawablePadding="3dp"
            style="@style/tv_small"
            android:textSize="12sp"
            android:text="重庆出发 56万人出游 100％满意"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_alignLeft="@+id/tv_tag_duration"
            android:layout_alignStart="@+id/tv_tag_duration" />

    </RelativeLayout>

    <TextView
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_title"
        style="@style/tv_small"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        tools:text="安徽省泾县，桃花潭之夏" />

    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_content"
        style="@style/tv_small"
        android:layout_marginLeft="10dp"
        android:textColor="#a4a4a4"
        android:textSize="12sp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:ellipsize="end"
        tools:text="白班机直飞，一天一夜，五星级酒店，全程大师级人物陪候随叫随到。" />

</LinearLayout>