<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_aid_icon"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/announcement_def" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/back_with_circle" />


    <TextView
        android:visibility="gone"
        android:id="@+id/tv_change_status"
        style="@style/tv_normal"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_aid_icon"
        android:layout_marginRight="20dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape_circle_white"
        android:gravity="center"
        android:textSize="10dp"
        tools:text="帮忙" />

    <TextView
        android:id="@+id/tv_item_title"
        style="@style/tv_normal"
        android:layout_below="@id/tv_change_status"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="19dp"
        tools:text="下水道堵塞了" />

    <TextView
        android:id="@+id/tv_aid_time"
        style="@style/tv_normal"
        android:layout_alignLeft="@id/tv_item_title"
        android:layout_below="@id/tv_item_title"
        android:layout_marginTop="17dp"
        android:textSize="14sp"
        tools:text="2017.3.6" />


    <TextView
        android:id="@+id/tv_aid_creator"
        style="@style/tv_normal"
        android:layout_alignLeft="@id/tv_item_title"
        android:layout_below="@id/tv_aid_time"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        tools:text="发起人:尼玛" />

    <LinearLayout
        android:id="@+id/ll_type_help"
        android:layout_alignLeft="@id/tv_item_title"
        android:layout_below="@id/tv_aid_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tv_aid_phone"
        style="@style/tv_normal"
        android:layout_alignLeft="@id/tv_item_title"
        android:layout_below="@id/tv_aid_creator"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        tools:text="联系电话：1925544444" />

        <View
            android:layout_marginTop="16dp"
            android:layout_marginRight="11dp"
           style="@style/line_gray"/>

        <TextView
            android:layout_marginTop="16dp"
            android:text="地址"
            style="@style/tv_normal" />

        <TextView
            android:id="@+id/tv_aid_address"
            android:layout_marginTop="16dp"
            android:text="茶韵新城规范"
            android:textSize="14sp"
            style="@style/tv_normal" />

        <View
            android:layout_marginTop="16dp"
            android:layout_marginRight="11dp"
            style="@style/line_gray"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_joiner_title"
        style="@style/tv_normal"
        android:layout_below="@id/ll_type_help"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="17dp"
        android:layout_alignLeft="@id/tv_item_title"
        tools:text="回答" />

</RelativeLayout>