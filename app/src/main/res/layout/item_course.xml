<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"

   >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_11"
        android:paddingTop="@dimen/dp_16"
        >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_course_icon"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:riv_corner_radius="5dip"
        tools:src="@drawable/help_a_neighbor_off" />

    <TextView
        android:id="@+id/tv_course_title"
        style="@style/tv_normal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_course_icon"
        android:maxLength="15"

        android:maxLines="1"
        android:text="古典音乐一班"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_course_teacher"
        style="@style/tv_normal"
        android:layout_alignLeft="@id/tv_course_title"
        android:layout_below="@id/tv_course_title"
        android:layout_marginTop="@dimen/dp_6"
        android:drawableLeft="@drawable/course_list_teacher"
        android:drawablePadding="@dimen/dp_5"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="#666666"
        android:textSize="@dimen/sp_11"
        tools:text="授课老师:张老师" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_course_title"
        android:layout_below="@id/tv_course_teacher"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#dddddd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_course_allow_count"
            style="@style/tv_normal"
            android:background="#ffffff"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_5"
            android:textColor="#666666"
            android:textSize="@dimen/sp_11"
            tools:text="报名人数:35" />

        <TextView
            android:id="@+id/tv_course_stock"
            style="@style/tv_normal"
            android:layout_marginLeft="0.5dp"
            android:background="#ffffff"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="#666666"
            android:textSize="@dimen/sp_11"
            tools:text="剩余名额:12" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/line_gray"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@id/tv_course_title"
        android:layout_below="@id/ll"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f5f5f9" />

    <TextView
        android:id="@+id/tv_course_time"
        style="@style/tv_normal"
        android:layout_alignLeft="@id/tv_course_title"
        android:layout_below="@id/line"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        android:drawableLeft="@drawable/course_list_time"
        android:drawablePadding="@dimen/dp_5"
        android:maxLines="1"
        android:textColor="#666666"
        android:textSize="@dimen/sp_11"
        tools:text="上课时间:每周三下午14：20-17：00" />

    <TextView
        android:id="@+id/tv_course_address"
        style="@style/tv_normal"
        android:layout_alignLeft="@id/tv_course_title"
        android:layout_below="@id/tv_course_time"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#ffffff"
        android:drawableLeft="@drawable/course_list_address"
        android:drawablePadding="@dimen/dp_5"
        android:maxLines="1"
        android:textColor="#666666"
        android:textSize="@dimen/sp_11"
        tools:text="上课地点:重庆市渝中区山城老年活动中心" />




    <lilun.com.pensionlife.widget.CustomTextView
        android:id="@+id/tv_apply"
        style="@style/tv_small"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/rect_coner_red"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:text="立即报名"
        android:textColor="#ff4400"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"
        app:textNormalSolidColor="#ffffff"
        app:textRadius="50dp"
        app:textStrokeColor="#ff4400"
        app:textStrokeWidth="1dp" />


    <TextView
        android:id="@+id/tv_course_price"
        style="@style/tv_normal"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/ll"
        android:layout_marginRight="@dimen/dp_10"
        android:background="#ffffff"
        android:maxLines="1"
        android:textSize="@dimen/sp_11"
        tools:text="合计：900" />

    </RelativeLayout>

    <View
        android:background="#f5f5f9"
        style="@style/line_gray"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/dp_16" />

</RelativeLayout>