<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_write_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_desc"
        style="@style/tv_small"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        android:text="     尊敬的用户，您的平台账号已被相关组织注册，请进入账号激活页面，修改您的账号密码并激活您的平台账号" />

    <View
        android:id="@+id/line"
        style="@style/line_gray"
        android:layout_below="@id/tv_desc"
        android:layout_marginTop="@dimen/dp_20" />


    <TextView
        android:id="@+id/tv_activate"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_14"
        style="@style/tv_normal"
        android:text="激活账号"
        android:textColor="#108EE9"
        android:textSize="@dimen/sp_15" />
</RelativeLayout>