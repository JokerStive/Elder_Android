<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_14"
    android:paddingRight="@dimen/dp_14"
    android:paddingTop="@dimen/dp_10">

    <lilun.com.pensionlife.widget.CircleImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@drawable/icon_def" />

    <TextView
        android:id="@+id/tv_rank_name"
        style="@style/tv_small_ellipsize"
        android:layout_alignTop="@id/iv_icon"
        android:layout_marginLeft="@dimen/sp_18"
        android:layout_toRightOf="@id/iv_icon"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_16"
        tools:text="匿名用户" />


    <TextView
        android:id="@+id/tv_rank_time"
        style="@style/tv_small_ellipsize"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_icon"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12"
        tools:text="2017-08-06" />

    <RatingBar
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/rb_score"
        style="@style/ratingBarr_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_rank_name"
        android:layout_below="@id/tv_rank_name"
        android:layout_gravity="center_vertical"
        android:isIndicator="true"
        android:numStars="5" />

    <TextView
        android:id="@+id/tv_rank_title"
        style="@style/tv_small"
        android:layout_below="@id/rb_score"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15"
        android:layout_alignLeft="@id/tv_rank_name"
        android:layout_marginTop="@dimen/dp_8"
        tools:text="非常感谢陈老师的耐心，帮我解决了自己 的疑惑，后续有问题还是会来寻求帮助的" />


    <View
        android:layout_below="@id/tv_rank_title"
        style="@style/line_gray"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="1dp"
        android:background="#f5f5f9" />
</RelativeLayout>