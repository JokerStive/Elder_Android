<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="Theme.FloatActivity" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!--拍照获取图片dialogFragment-->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- photo_dialog进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_photo_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_photo_out</item>
    </style>


    <style name="autoScroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!--20sp tv ell-->
    <style name="tv_normal_ellipsize" parent="autoScroll">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--16sp tv 输入说明-->
    <style name="tv_input_desp">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small</item>
        <item name="android:textColor">@color/activity_black</item>
    </style>
    <!--16sp tv 输入内容-->
    <style name="tv_input_content">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small</item>
        <item name="android:textColor">@color/activity_black</item>
    </style>

    <!--20sp tv -->
    <style name="tv_normal">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--1.5倍间距tv-->
    <style name="tv_line_space">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--17sp tv ell-->
    <style name="tv_small_ellipsize" parent="autoScroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--17sp tv -->
    <style name="tv_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--14sp tv -->
    <style name="tv_small_x">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small_x</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--14sp tv ell-->
    <style name="tv_small_x_ellipsize" parent="autoScroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small_x</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--默认黑色et-->
    <style name="et_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
    </style>


    <!--默认的线条-->
    <style name="line_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_less</item>
    </style>


    <!--深红色背景的btn-->
    <style name="btn_red_deep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_rect_red_corner_5</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--深红色背景的btn-->
    <style name="btn_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ratingBarr_small" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/rating_bar_small</item>

        <item name="android:minWidth">16dp</item>

        <item name="android:minHeight">13dp</item>

    </style>

    <style name="ratingBarr_big" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/rating_bar_big</item>

        <item name="android:minWidth">23dp</item>

        <item name="android:minHeight">37dp</item>

    </style>

    <!--活动详情使用的-->
    <style name="acitivyt_detail_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="acitivyt_detail_normal_black" parent="acitivyt_detail_normal">
        <item name="android:textColor">@color/activity_black</item>
    </style>

    <style name="acitivyt_detail_normal_grey" parent="acitivyt_detail_normal">
        <item name="android:textColor">@color/gray2</item>
    </style>


</resources>
