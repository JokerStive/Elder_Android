<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>


    <style name="autoScroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!--默认黑色tv-->
    <style name="tv_normal" parent="autoScroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--1.5倍间距tv-->
    <style name="tv_line_space">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--默认黑色tv-->
    <style name="tv_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--默认黑色et-->
    <style name="et_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
    </style>


    <!--默认的线条-->
    <style name="line_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_less</item>
    </style>


    <!--深红色背景的btn-->
    <style name="btn_red_deep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_rect_red</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--深红色背景的btn-->
    <style name="btn_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="fiveRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/five_rating_bar</item>

        <item name="android:minHeight">13dp</item>

        <item name="android:maxHeight">13dp</item>

    </style>


</resources>
